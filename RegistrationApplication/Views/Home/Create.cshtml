@model RegistrationApplication.EmployeeDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<strong>Create</strong>

<form asp-action="Create">
    <div class="form-horizontal">
        <strong>Employee</strong>
        <hr />
